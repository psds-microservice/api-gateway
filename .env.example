# ===========================================
# API Gateway — переменные окружения
# ===========================================
# Скопируйте в .env и задайте значения.
# При запуске приложение загружает .env из текущей директории (если файл есть).
# Переменные переопределяют значения из config/config.yaml.
# Если YAML не найден — конфиг собирается из env и дефолтов.
# ===========================================

# --- HTTP / gRPC (dual-режим) ---
HOST=localhost
PORT=8080
# или устаревший ключ (то же самое):
HTTP_PORT=8080
GRPC_PORT=9090

# --- User Service (gRPC) ---
USER_SERVICE_HOST=localhost
USER_SERVICE_PORT=9091

# --- PostgreSQL ---
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=
DB_DATABASE=api_gateway
# или альтернативный ключ:
DB_NAME=api_gateway
DB_SSLMODE=disable

# --- Redis (опционально) ---
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# --- JWT ---
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRATION=24

# --- Логирование ---
LOG_LEVEL=info
LOG_FORMAT=json
